<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Authentication Method" Height="700" Width="500" Background="#f3f3f3">
    <Window.Resources>
        <!-- Base button style with rounded corners -->
        <Style TargetType="Button" x:Key="BaseButtonStyle">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="#007ACC"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <!-- Rounded corner template -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="1" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <!-- Hover effect -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                    <Setter Property="BorderBrush" Value="#005A9E"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#DDDDDD"/>
                    <Setter Property="Foreground" Value="#888888"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- Define textblock styles -->
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <!-- Define textbox styles with rounded corners -->
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="3,2"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#007ACC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}" Foreground="{TemplateBinding Foreground}" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- PasswordBox style -->
        <Style TargetType="PasswordBox">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="3,2"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#007ACC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}" Foreground="{TemplateBinding Foreground}" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Saved Tenants Selector -->
        <GroupBox Grid.Row="0" Header="Saved Configurations" Padding="5" Margin="0,0,0,10">
            <DockPanel>
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" Margin="5,0,0,0">
                    <Button x:Name="LoadConfigButton" Content="Load" Width="60" Height="25" Margin="0,0,5,0" Style="{StaticResource BaseButtonStyle}"/>
                    <Button x:Name="DeleteConfigButton" Content="Delete" Width="60" Height="25" Style="{StaticResource BaseButtonStyle}"/>
                </StackPanel>
                <ComboBox x:Name="SavedTenantsComboBox" Height="30" Margin="0,0,5,0" VerticalContentAlignment="Center">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" Margin="5,2"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </DockPanel>
        </GroupBox>

        <!-- Selection Panel -->
        <TextBlock Grid.Row="1" Text="Select Authentication Method:" FontWeight="Bold" FontSize="16" Margin="5,5,5,10"/>
        
        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="10,0,0,10">
            <RadioButton x:Name="RadioButtonClientSecret" GroupName="AuthMethod" Content="App Permissions - Client Secret" 
                         FontSize="14" Margin="5" IsChecked="True"/>
            <RadioButton x:Name="RadioButtonCertificate" GroupName="AuthMethod" Content="App Permissions - Certificate" 
                         FontSize="14" Margin="5"/>
            <RadioButton x:Name="RadioButtonInteractive" GroupName="AuthMethod" Content="Delegated Permissions - Interactive Login" 
                         FontSize="14" Margin="5"/>
        </StackPanel>

        <!-- Dynamic Input Panels -->
        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
            <Grid>
                <!-- Client Secret Input Panel -->
                <StackPanel x:Name="ClientSecretInputPanel" Visibility="Visible">
                    <TextBlock Text="Tenant ID" FontWeight="Bold"/>
                    <TextBox x:Name="TenantIDTextBox" Width="400"/>
                    
                    <TextBlock Text="App ID (Client ID)" FontWeight="Bold" Margin="0,10,0,0"/>
                    <TextBox x:Name="AppIDTextBox" Width="400"/>
                    
                    <TextBlock Text="App Secret (Client Secret)" FontWeight="Bold" Margin="0,10,0,0"/>
                    <PasswordBox x:Name="AppSecretTextBox" Width="400"/>
                </StackPanel>

                <!-- Certificate Input Panel -->
                <StackPanel x:Name="CertificateInputPanel" Visibility="Collapsed">
                    <TextBlock Text="Tenant ID" FontWeight="Bold"/>
                    <TextBox x:Name="TenantIDTextBoxCert" Width="400"/>
                    
                    <TextBlock Text="App ID (Client ID)" FontWeight="Bold" Margin="0,10,0,0"/>
                    <TextBox x:Name="AppIDTextBoxCert" Width="400"/>
                    
                    <TextBlock Text="Certificate Thumbprint" FontWeight="Bold" Margin="0,10,0,0"/>
                    <DockPanel Width="400" HorizontalAlignment="Left">
                        <Button x:Name="BrowseCertButton" Content="Browse..." 
                                Style="{StaticResource BaseButtonStyle}" 
                                Width="100" Height="30" Margin="5,5,0,5" 
                                DockPanel.Dock="Right"/>
                        <TextBox x:Name="CertThumbprintTextBox" Margin="5,5,5,5"/>
                    </DockPanel>
                    <TextBlock Text="Click Browse to select a certificate from your certificate store" 
                               FontSize="11" FontStyle="Italic" Foreground="Gray" Margin="5,2,5,0"/>
                </StackPanel>

                <!-- Interactive Input Panel -->
                <StackPanel x:Name="InteractiveInputPanel" Visibility="Collapsed">
                    <TextBlock Text="Tenant ID" FontWeight="Bold"/>
                    <TextBox x:Name="TenantIDTextBoxInt" Width="400"/>
                    <TextBlock Text="Required for single-tenant apps (leave blank for multi-tenant)" 
                               FontSize="11" FontStyle="Italic" Foreground="Gray" Margin="5,2,5,5"/>
                    
                    <TextBlock Text="App ID (Client ID)" FontWeight="Bold" Margin="0,10,0,0"/>
                    <TextBox x:Name="AppIDTextBoxInt" Width="400"/>
                    <TextBlock Text="Leave blank to use default Microsoft Graph app" 
                               FontSize="11" FontStyle="Italic" Foreground="Gray" Margin="5,2,5,5"/>
                    
                    <TextBlock Text="Scopes (comma-separated)" FontWeight="Bold" Margin="0,10,0,0"/>
                    <TextBox x:Name="ScopesTextBox" Width="400" 
                             Text="User.Read.All, Directory.Read.All, DeviceManagementConfiguration.ReadWrite.All, DeviceManagementApps.ReadWrite.All, DeviceManagementScripts.ReadWrite.All"/>
                    <TextBlock Text="Default scopes will be used if left blank" 
                               FontSize="11" FontStyle="Italic" Foreground="Gray" Margin="5,2,5,0"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button x:Name="SaveConfigButton" Content="Save Configuration" Width="150" Margin="0,0,10,0" Style="{StaticResource BaseButtonStyle}"/>
            <Button x:Name="SubmitButton" Content="Connect" Width="150" Style="{StaticResource BaseButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
